@inject HttpClient Http
@inject NavigationManager Navigation
@using Elwin.GoGroceries.Client.Components.Forms
@using Elwin.GoGroceries.Client.Helpers;
@using Elwin.GoGroceries.Contracts;

@page "/templates/add"

<MudPaper Width="100%" Class="pa-4">
    <TemplateForm OnSave="Add"></TemplateForm>
</MudPaper>

@code {
    protected async void Add(TemplateDto dto)
    {
        var res = await Http.PostAsync("Templates", JsonSerializerHelper.Process(dto));

        if (res.IsSuccessStatusCode)
        {
            Navigation.NavigateTo($"/templates");
        }
    }
}
